<div class="contents row">
  <div class="container">
    <div class="post-content">
      <%= image_tag @post.image.variant(resize: '300x300'), class: '' if @post.image.attached? %>
      <div class="post-info">
        <%= @post.content %>
      </div>
      <div class="post-name">
        <%= "#{@post.user.nickname}_#{@post.created_at.to_s(:datetime_jp)}" %>
      </div>
      <%= link_to "Delete", post_path(@post), method: :delete %>
    </div>
    <% if user_signed_in? %>
      <%= form_with(model: [@post, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "3" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "#" %>：</strong>
          <%= comment.text %>
        </p>
      <% end %>
    </div>
  </div>
</div>